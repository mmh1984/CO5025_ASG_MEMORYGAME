<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/play_grid"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"	>

    <TableRow android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_p1"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv_hs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_hs"
            android:textAlignment="center"
            android:textSize="30dp" />
    </TableRow>

    <TableRow android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_11"
            android:src="@drawable/ic_image100"
            android:layout_width="200dp"
            android:layout_height="200dp"   />
        <ImageView
            android:id="@+id/iv_12"
            android:src="@drawable/ic_image100"
            android:layout_width="200dp"
            android:layout_height="200dp"   />
        <ImageView
            android:id="@+id/iv_13"
            android:src="@drawable/ic_image100"
            android:layout_width="200dp"
            android:layout_height="200dp"   />
    </TableRow>

    <TableRow android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_21"
            android:src="@drawable/ic_image100"
            android:layout_width="200dp"
            android:layout_height="200dp"   />
        <button
            android:id="@+id/iv_00"
            android:layout_width="200dp"
            android:layout_height="200dp"   />
        <ImageView
            android:id="@+id/iv_22"
            android:src="@drawable/ic_image100"
            android:layout_width="200dp"
            android:layout_height="200dp"   />
    </TableRow>

    <TableRow android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_31"
            android:src="@drawable/ic_image100"
            android:layout_width="200dp"
            android:layout_height="200dp"   />
        <ImageView
            android:id="@+id/iv_32"
            android:src="@drawable/ic_image100"
            android:layout_width="200dp"
            android:layout_height="200dp"   />
        <ImageView
            android:id="@+id/iv_33"
            android:src="@drawable/ic_image100"
